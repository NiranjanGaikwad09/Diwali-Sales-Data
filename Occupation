sns.set(rc={'figure.figsize': (20,5)})
# Sets a wide figure size for better visibility of occupation labels

ax = sns.countplot(data=df, x='Occupation')
# Creates a countplot showing number of customers in each Occupation category

for bars in ax.containers:
    ax.bar_label(bars)
    # Adds count labels on top of each bar
    plt.show()
    # Displays the countplot with labels


sales_state = df.groupby(['Occupation'], as_index=False)['Amount'].sum().sort_values(by='Amount', ascending=False)
# Groups data by Occupation, calculates total Amount spent,
# and sorts occupations based on highest spending

sns.set(rc={'figure.figsize': (20,5)})
# Sets the figure size again for the next plot

sns.barplot(data=sales_state, x='Occupation', y='Amount')
# Creates a barplot showing which Occupation spends the most
plt.show()
# Displays the spending bar chart





